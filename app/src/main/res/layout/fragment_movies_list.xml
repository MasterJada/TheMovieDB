<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".movies_list.MoviesListFragment">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_movies"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7a000000" android:id="@+id/fl_load" android:visibility="gone">
        <androidx.core.widget.ContentLoadingProgressBar
                style="@style/Base.Widget.AppCompat.ProgressBar"
                android:progressTint="#11E60B"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center" android:indeterminate="true"/>
    </FrameLayout>
</FrameLayout>